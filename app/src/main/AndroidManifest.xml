<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.phibonatii.phibonatii">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_flood"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_flood_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".JoinActivity"
            android:label="@string/activity_join_name" />
        <activity
            android:name=".ChangePasswordActivity"
            android:label="@string/activity_change_password_name" />
        <activity
            android:name=".SimpleChangePasswordActivity"
            android:label="@string/activity_simple_change_password_name" />
        <activity
            android:name=".MainActivity"
            android:label="@string/activity_main_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FloodActivity"
            android:label="@string/activity_main_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FindGroupActivity"
            android:label="@string/activity_find_group_name" />
        <activity
            android:name=".NewGroupActivity"
            android:label="@string/activity_new_group_name" />
        <activity
            android:name=".HideBonaActivity"
            android:label="@string/activity_hide_bona_name" />
        <activity
            android:name=".MapaActivity"
            android:label="@string/activity_change_city_name" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />
    </application>

</manifest>